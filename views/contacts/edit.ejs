<% include ../partials/head %>
<% include ../partials/menu %>

  <header>
    <h1>Informations about: #<%- contact._id+ ' - ' +contact.name %></small></h1>
  </header>

  <form action="/contacts/<%- contact._id %>?__method=put" method="post">
    <div class="form-group">
      <label for="txtName">Name:</label>
      <input type="text" class="form-control" id="txtName" name="txtName" required value="<%- contact.name %>">
    </div>

    <div class="form-group">
      <label for="txtEmail">E-mail:</label>
      <input type="email" class="form-control" id="txtEmail" name="txtEmail" required value="<%- contact.email %>">
    </div>

    <button type="submit" class="btn btn-default">Save changes</button>
  </form>

<% include ../partials/footer %>